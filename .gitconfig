[user]
    name = Christian Wesselhoeft
    email = christian@cwesselhoeft.com

[github]
    user = xtian

[alias]
    a  = add
    aa = add .
    b = branch
    c = commit
    ca = commit --amend -C HEAD
    cl = clone --recursive
    cm = commit -m
    cp = cherry-pick
    cam = commit -am
    co = checkout
    d = diff --patch-with-stat
    dw = diff --word-diff --patch-with-stat
    dc = diff --cached --patch-with-stat
    l = log --pretty='format:%Cgreen%h%Creset %an - %s' --graph
    lc = local-commits
    p = pull -r
    pp = !"git pull; git submodule foreach git pull origin master"
    r = rebase
    ri = rebase -i
    rix = rebase -i HEAD~10
    rr = reset --hard head
    s = status -s

[apply]
    whitespace = fix

[branch]
    autosetuprebase = always

[branch "master"]
    merge = refs/heads/master
    rebase = true
    remote = origin

[color]
    ui = true

[core]
    excludesfile = ~/.gitignore_global
    whitespace = space-before-tab,trailing-space

[push]
    default = tracking
